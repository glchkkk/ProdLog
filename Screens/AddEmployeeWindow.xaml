<Window x:Class="ProdAndLog.Screens.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog.Screens"
        mc:Ignorable="d"
        Title="Добавить сотрудника" Height="520" Width="460">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <TextBlock Text="Табельный номер (уникальный):" Margin="0,0,0,2"/>
                <TextBox x:Name="txtEmpNumber" Margin="0,0,0,10"/>

                <TextBlock Text="ФИО:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtFullName" Margin="0,0,0,10"/>

                <TextBlock Text="Должность:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtPosition" Margin="0,0,0,10"/>

                <TextBlock Text="Отдел:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtDepartment" Margin="0,0,0,10"/>

                <TextBlock Text="Квалификации:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtQualifications" AcceptsReturn="True" TextWrapping="Wrap" Height="60" Margin="0,0,0,10"/>

                <TextBlock Text="Тип ставки:" Margin="0,0,0,2"/>
                <ComboBox x:Name="cmbRateType" SelectedIndex="0" Margin="0,0,0,10">
                    <ComboBoxItem Content="почасовая"/>
                    <ComboBoxItem Content="оклад"/>
                </ComboBox>

                <TextBlock Text="Размер ставки (руб):" Margin="0,0,0,2"/>
                <TextBox x:Name="txtRateAmount" Text="0.00" Margin="0,0,0,10"/>

                <CheckBox x:Name="chkActive" Content="Работает" IsChecked="True" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Сохранить" Click="Save_Click" Width="90" Margin="0,0,10,0"/>
                    <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
