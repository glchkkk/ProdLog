<Window x:Class="ProdAndLog.Screens.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog.Screens"
        mc:Ignorable="d"
        Title="Добавить продукцию" Height="380" Width="420">
    <Grid>
        <StackPanel Margin="15">
            <TextBlock Text="Артикул (уникальный):" Margin="0,0,0,2"/>
            <TextBox x:Name="txtArticle" Margin="0,0,0,10"/>

            <TextBlock Text="Наименование:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>

            <TextBlock Text="Категория:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtCategory" Margin="0,0,0,10"/>

            <TextBlock Text="Описание:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtDescription" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

            <TextBlock Text="Единица измерения:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtUnit" Text="шт" Margin="0,0,0,10"/>

            <CheckBox x:Name="chkActive" Content="Активен" IsChecked="True" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="Save_Click" Width="90" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
