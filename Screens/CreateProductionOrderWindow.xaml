<Window x:Class="ProdAndLog.Screens.CreateProductionOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog.Screens"
        mc:Ignorable="d"
        Title="Создать производственный заказ" Height="380" Width="480">
    <Grid>
        <StackPanel Margin="15">
            <TextBlock Text="Клиент:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtCustomer" Margin="0,0,0,10"/>

            <TextBlock Text="Продукция:" Margin="0,0,0,2"/>
            <ComboBox x:Name="cmbProduct"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  Margin="0,0,0,10"/>

            <TextBlock Text="Количество:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtQuantity" Text="1" Margin="0,0,0,10"/>

            <TextBlock Text="Приоритет (1–5):" Margin="0,0,0,2"/>
            <Slider x:Name="sliderPriority" Minimum="1" Maximum="5" Value="3" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Value, ElementName=sliderPriority, StringFormat='Приоритет: {0:F0}'}" HorizontalAlignment="Left"/>

            <TextBlock Text="Дедлайн:" Margin="0,0,0,2"/>
            <DatePicker x:Name="dpDeadline" SelectedDate="{x:Static system:DateTime.Now}" Margin="0,0,0,15"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Создать" Click="Save_Click" Width="90" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
