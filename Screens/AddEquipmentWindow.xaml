<Window x:Class="ProdAndLog.Screens.AddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog.Screens"
        mc:Ignorable="d"
        Title="Добавить оборудование" Height="480" Width="460">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <TextBlock Text="Инвентарный номер (уникальный):" Margin="0,0,0,2"/>
                <TextBox x:Name="txtInvNumber" Margin="0,0,0,10"/>

                <TextBlock Text="Модель:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtModel" Margin="0,0,0,10"/>

                <TextBlock Text="Тип оборудования:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtType" Margin="0,0,0,10"/>

                <TextBlock Text="Дата ввода в эксплуатацию:" Margin="0,0,0,2"/>
                <DatePicker x:Name="dpCommissionDate" SelectedDate="{x:Static system:DateTime.Now}" Margin="0,0,0,10"
                        xmlns:system="clr-namespace:System;assembly=mscorlib"/>

                <TextBlock Text="Статус:" Margin="0,0,0,2"/>
                <ComboBox x:Name="cmbStatus" SelectedIndex="0" Margin="0,0,0,10">
                    <ComboBoxItem Content="в работе"/>
                    <ComboBoxItem Content="в ремонте"/>
                    <ComboBoxItem Content="на ТО"/>
                    <ComboBoxItem Content="списано"/>
                </ComboBox>

                <TextBlock Text="График профилактики:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtMaintenance" Text="ТО каждые 500 м/ч" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Сохранить" Click="Save_Click" Width="90" Margin="0,0,10,0"/>
                    <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
