<Window x:Class="ProdAndLog.Screens.ChangeOrderStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog.Screens"
        mc:Ignorable="d"
        Title="Изменить статус этапа" Height="200" Width="350">
    <Grid>
        <StackPanel Margin="15">
            <TextBlock Text="Текущий этап:" Margin="0,0,0,5"/>
            <TextBlock x:Name="txtStageName" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="Новый статус:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbStatus" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="Save_Click" Width="90" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
